<h1>Add a new Article</h1>

<%# here scope is the current model we are working with and if we want our form to work as https 
rather than ajax then we have to use local %>

<% if @articles.errors.any? %>
        <p>You have got some errors</p>
        <ul>
            <% @articles.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
<% end %>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>

    <p>
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %> <br>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.submit %>
    </p>


<% end %>
<%= link_to 'Return to articles listing page', articles_path%>